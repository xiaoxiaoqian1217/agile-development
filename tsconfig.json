{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths":{
      "@/*": ["src/*"],
      "@apis/*": ["src/apis/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],

     }
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
 
